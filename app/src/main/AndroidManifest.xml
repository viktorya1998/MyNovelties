<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mynovelties">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/title_novelties"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".Activity.Open"
            android:label="@string/title_novelties">
        </activity>
        <activity
            android:name=".Activity.SettingActivity"
            android:label="@string/title_setting"/>
        <activity
            android:name=".Activity.UpdateActivity"
            android:label="@string/title_signal"/>
        <activity
            android:name=".Activity.SaveActivity"
            android:label="@string/title_save" />
        <activity
            android:name=".Activity.NoveltiesActivity"
            android:label="@string/title_novelties">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>